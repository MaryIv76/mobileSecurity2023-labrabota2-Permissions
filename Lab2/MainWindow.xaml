<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Name="btnOpenFile" Click="BtnOpenFileClick"  Margin="0,0,15,0" Height="25">Выберите файл</Button>
            <TextBox Name="txtBoxFileName" Width="650" TextWrapping="Wrap" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="25"></TextBox>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="0,10,0,10">
            <Button Name="btnConvertToZip" Click="BtnConvertToZipClick"  Margin="0,0,15,0" Height="25">Создать zip-архив</Button>
            <Button Name="btnGetHashCode" Click="BtnGetHashCodeClick"  Margin="0,0,15,0" Height="25">Вычислить хеш (SHA256)</Button>
            <Button Name="btnConvertToPng" Click="BtnConvertToPngClick"  Margin="0,0,15,0" Height="25">Преобразовать изображение в png</Button>
        </WrapPanel>
    </DockPanel>
</Window>
